{
    "manifest_version": 3,
    "name": "Try WordPress",
    "description": "An extension that liberates your data into WordPress",
    "version": "0.0.1",
    "icons":
    {
        "32": "icons/icon-32.png",
        "128": "icons/icon-128.png"
    },
    "options_page": "settings/settings.html",
    "action":
    {},
    "permissions":
    [
        "tabs",
        "activeTab",
        "storage",
        "scripting",
        "pageCapture",
        "sidePanel",
        "webRequestBlocking",
        "webRequest",
        "downloads"
    ],
    "host_permissions":
    [
        "*://*/*"
    ],
    "background":
    {
        "service_worker": "background/index.js"
    },
    "side_panel":
    {
        "default_path": "sidebar/sidebar.html",
        "default_icon":
        {
            "32": "icons/icon-32.png",
            "128": "icons/icon-128"
        },
        "default_title": "My Sidebar"
    },
    "content_scripts":
    [
        {
            "js":
            [
                "content/index.js"
            ],
            "matches":
            [
                "<all_urls>"
            ]
        },
        {
            "js":
            [
                "wp-plugin/index.js"
            ],
            "matches":
            [
                "http://*/wp-admin/post.php?*",
                "https://*/wp-admin/post.php?*",
                "http://*/wp-admin/post-new.php*"
            ],
            "run_at": "document_end",
            "world": "MAIN"
        }
    ]
}
